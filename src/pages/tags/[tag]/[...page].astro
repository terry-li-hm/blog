---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import LayoutChiri from "@/layouts/LayoutChiri.astro";
import HeaderChiri from "@/components/HeaderChiri.astro";
import FooterChiri from "@/components/FooterChiri.astro";
import CardChiri from "@/components/CardChiri.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const tags = getUniqueTags(posts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(posts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const { page, tagName } = Astro.props;
---

<LayoutChiri title={`Tag: ${tagName} | ${SITE.title}`}>
  <HeaderChiri />
  <main class="main-content">
    <h1>Tag: {tagName}</h1>
    <p class="tag-desc">All the articles with the tag "{tagName}".</p>
    <div class="posts-list">
      {page.data.map(post => <CardChiri data={post} />)}
    </div>
    {page.lastPage > 1 && (
      <nav class="pagination">
        {page.url.prev && <a href={page.url.prev}>← Previous</a>}
        <span>Page {page.currentPage} of {page.lastPage}</span>
        {page.url.next && <a href={page.url.next}>Next →</a>}
      </nav>
    )}
  </main>
  <FooterChiri />
</LayoutChiri>
