---
import type { CollectionEntry } from "astro:content";
import Datetime from "./Datetime.astro";

export interface Props {
  data: CollectionEntry<"blog">;
  index?: number;
}

const { data } = Astro.props;
const { data: postData, id } = data;
const { title, pubDatetime, modDatetime } = postData;

// Extract slug from id (format: "filename.md" or "folder/filename.md")
const slug = id.replace(/\.md$/, "");
const href = `/posts/${slug}/`;
---

<li class="post-item">
  <a href={href} class="post-link">
    <div class="post-content">
      <span class="post-title">{title}</span>
      <div class="divider"></div>
      <div class="post-date">
        <Datetime 
          pubDatetime={pubDatetime} 
          modDatetime={modDatetime}
        />
      </div>
    </div>
  </a>
</li>

<style>
  .post-item {
    list-style: none;
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: var(--foreground);
    transition: opacity 0.15s ease-out;
  }

  .post-content {
    height: 2.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid transparent;
  }

  .post-title {
    font-size: 0.9375rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-shrink: 1;
    min-width: 0;
  }

  .divider {
    flex: 1;
    height: 1px;
    background: linear-gradient(
      to right,
      var(--text-tertiary) 0%,
      var(--text-tertiary) 50%,
      transparent 50%,
      transparent 100%
    );
    background-size: 8px 1px;
    opacity: 0.5;
  }

  .post-date {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Hover effect on parent list */
  .post-list:hover .post-link {
    opacity: 0.4;
  }

  .post-list:hover .post-link:hover {
    opacity: 1;
  }

  .post-list:hover .post-link:hover .divider {
    opacity: 0.75;
  }

  .post-list:hover .post-link:hover .post-date {
    color: var(--text-secondary);
  }

  @media (max-width: 640px) {
    .post-content {
      height: auto;
      min-height: 2.75rem;
      flex-wrap: wrap;
    }

    .post-title {
      flex: 1 1 100%;
    }

    .divider {
      display: none;
    }

    .post-date {
      font-size: 0.75rem;
      opacity: 0.7;
    }
  }
</style>