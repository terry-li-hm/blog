---
import type { CollectionEntry } from "astro:content";
import Datetime from "./Datetime.astro";

export interface Props {
  data: CollectionEntry<"blog">;
  index?: number;
}

const { data } = Astro.props;
const { data: postData, id } = data;
const { title, pubDatetime, modDatetime, timezone } = postData;

// Extract slug from id (format: "filename.md" or "folder/filename.md")
const slug = id.replace(/\.md$/, "");
const href = `/posts/${slug}/`;
---

<li>
  <a href={href}>
    <div class="post-item">
      <p class="title">{title}</p>
      <div class="dotted-divider"></div>
      <p class="date">
        <Datetime 
          pubDatetime={pubDatetime} 
          modDatetime={modDatetime}
          timezone={timezone}
        />
      </p>
    </div>
  </a>
</li>

<style>
  /* Exact Chiri PostList styles */
  li {
    list-style-type: none;
  }

  a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  .post-item {
    height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
  }

  .title {
    margin: 0;
    flex-shrink: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .date {
    margin: 0;
    color: var(--text-secondary);
    opacity: 0.75;
    letter-spacing: var(--spacing-s);
    flex-shrink: 0;
    white-space: nowrap;
  }

  .dotted-divider {
    flex: 1 1 3rem;
    min-width: 3rem;
    max-width: 100%;
    text-align: end;
    letter-spacing: 5px;
    height: 1.675rem;
    overflow: hidden;
    color: var(--text-tertiary);
    opacity: 0.75;
  }

  .dotted-divider::after {
    content: '·····························································································································································';
    pointer-events: none;
  }
</style>