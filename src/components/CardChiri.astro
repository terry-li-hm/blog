---
import type { CollectionEntry } from "astro:content";
import DateChiri from "./DateChiri.astro";

export interface Props {
  data: CollectionEntry<"blog">;
  index?: number;
}

const { data } = Astro.props;
const { data: postData, id } = data;
const { title, pubDatetime, modDatetime } = postData;

// Extract slug from id (format: "filename.md" or "folder/filename.md")
const slug = id.replace(/\.md$/, "");
const href = `/posts/${slug}/`;
---

<li>
  <a href={href}>
    <div class="post-item">
      <p class="title">{title}</p>
      <div class="divider"></div>
      <DateChiri 
        pubDatetime={pubDatetime} 
        modDatetime={modDatetime}
      />
    </div>
  </a>
</li>

<style>
  /* Exact Chiri PostList styles */
  li {
    list-style-type: none;
  }

  a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  a:hover {
    opacity: 0.7;
  }

  .post-item {
    min-height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
  }

  .title {
    margin: 0;
    flex-shrink: 1;
    min-width: 0;
    line-height: 1.4;
  }

  .divider {
    flex: 1 1 auto;
    min-width: 3rem;
    margin: 0 0.25rem;
    height: 0.5px;
    background-color: var(--border);
  }
</style>