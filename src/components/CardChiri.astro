---
import type { CollectionEntry } from "astro:content";
import DateChiri from "./DateChiri.astro";
import { getReadingTime } from "@/utils/readingTime";

export interface Props {
  data: CollectionEntry<"blog">;
  index?: number;
}

const { data } = Astro.props;
const { data: postData, id, body } = data;
const { title, description, pubDatetime, modDatetime } = postData;

// Calculate reading time from the post body
const readingTime = body ? getReadingTime(body) : 1;

// Extract slug from id (format: "filename.md" or "folder/filename.md")
const slug = id.replace(/\.md$/, "");
const href = `/posts/${slug}/`;
---

<li>
  <a href={href}>
    <div class="post-item">
      <div class="post-content">
        <p class="title">{title}</p>
        {description && <p class="description">{description}</p>}
      </div>
      <div class="divider"></div>
      <DateChiri 
        pubDatetime={pubDatetime} 
        modDatetime={modDatetime}
        readingTime={readingTime}
      />
    </div>
  </a>
</li>

<style>
  /* Exact Chiri PostList styles */
  li {
    list-style-type: none;
  }

  a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  a:hover {
    opacity: 0.7;
  }

  .post-item {
    min-height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.75rem 0;
  }

  .post-content {
    flex-shrink: 1;
    min-width: 0;
  }

  .title {
    margin: 0;
    line-height: 1.4;
    font-weight: var(--font-weight-regular);
  }

  .description {
    margin: 0.25rem 0 0 0;
    font-size: var(--font-size-s);
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .divider {
    flex: 1 1 auto;
    min-width: 2rem;
    margin: 0.5rem 0.5rem 0 0.5rem;
    height: 0.5px;
    background-color: var(--border);
    align-self: flex-start;
  }
</style>