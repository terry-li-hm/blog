---
import { SHARE_LINKS } from "@/constants";

interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="share-section">
  <h3>Share this article</h3>
  <div class="share-buttons">
    {SHARE_LINKS.map(social => {
      let href = social.href;
      if (social.name === "LinkedIn") {
        href = `${social.href}${encodedUrl}`;
      } else if (social.name === "X") {
        href = `${social.href}${encodedUrl}&text=${encodedTitle}`;
      } else if (social.name === "Reddit") {
        href = `${social.href}${encodedUrl}&title=${encodedTitle}`;
      } else if (social.name === "HackerNews") {
        href = `${social.href}${encodedUrl}&t=${encodedTitle}`;
      } else if (social.name === "WhatsApp") {
        href = `${social.href}${encodedTitle}%20${encodedUrl}`;
      } else if (social.name === "Mail") {
        href = `${social.href}${encodedTitle}&body=Check%20out%20this%20article:%20${encodedUrl}`;
      }
      
      return (
        <a 
          href={href}
          title={social.linkTitle}
          class="share-button"
          target="_blank"
          rel="noopener noreferrer"
        >
          <social.icon />
          <span>{social.name}</span>
        </a>
      );
    })}
  </div>
</div>

<style>
  .share-section {
    margin: 3rem 0;
    padding: 1.5rem;
    background: var(--code-bg);
    border-radius: 0.5rem;
    border: 1px solid var(--border);
  }

  .share-section h3 {
    font-size: 1rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-family: var(--sans);
  }

  .share-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .share-button {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 0.375rem;
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .share-button:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
    border-color: var(--text-tertiary);
    transform: translateY(-1px);
  }

  .share-button svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .share-section {
      margin: 2rem -1rem;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }

    .share-buttons {
      gap: 0.5rem;
    }

    .share-button {
      padding: 0.375rem 0.625rem;
      font-size: 0.8125rem;
    }

    .share-button svg {
      width: 14px;
      height: 14px;
    }
  }
</style>