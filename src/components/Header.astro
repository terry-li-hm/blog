---
import { SITE } from "@/config";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
---

<header>
  <nav>
    <a href="/" class="site-title">
      {SITE.title}
    </a>
    {
      SITE.lightAndDarkMode && (
        <button
          id="theme-btn"
          class="theme-toggle"
          title="Toggles light & dark"
          aria-label="auto"
          aria-live="polite"
        >
          <IconMoon class="icon-moon" />
          <IconSunHigh class="icon-sun" />
        </button>
      )
    }
  </nav>
</header>

<style>
  header {
    width: 100%;
    max-width: 35rem;
    margin: 0 auto;
    padding: 1.5rem 1rem;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .site-title {
    font-size: 1.0625rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    text-decoration: none;
    color: inherit;
  }

  .site-title:hover {
    opacity: 0.7;
  }

  .theme-toggle {
    position: relative;
    width: 2rem;
    height: 2rem;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .theme-toggle:hover {
    opacity: 1;
  }

  .icon-moon,
  .icon-sun {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s;
  }

  .icon-moon {
    opacity: 1;
    rotate: 0deg;
  }

  .icon-sun {
    opacity: 0;
    rotate: 90deg;
  }

  :global(.dark) .icon-moon {
    opacity: 0;
    rotate: -90deg;
  }

  :global(.dark) .icon-sun {
    opacity: 1;
    rotate: 0deg;
  }
</style>
